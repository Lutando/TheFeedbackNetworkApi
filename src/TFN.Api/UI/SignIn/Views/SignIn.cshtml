@using TFN.Api.UI.SignIn
@model TFN.Api.UI.SignIn.SignInViewModel

<div class="signin">
    <div class="container">
        <form asp-route="SignIn">
            <input type="hidden" asp-for="ReturnUrl" />
            <p class="lead">Sign in</p>
            @Html.Partial("_ValidationSummary")

            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" type="email" class="form-control" id="loginEmail" placeholder="Username or Email" autofocus>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control" id="loginPassword" placeholder="Password" autocomplete="off" required>
            </div>

            <button type="submit" class="btn btn-primary">Sign in</button>
            <div class="col-md6 right-align addtional-info">
                <span>Don't have an account? <a asp-route="Register" id="sign-in-a" class="semi-bold">Register</a></span>
                <span>Forgot your password? <a asp-route="ForgotPassword" id="forgot-password-a" class="semi-bold">Forgot Password</a></span>
            </div>
        </form>
    </div>
</div>